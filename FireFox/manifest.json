{
  "manifest_version": 2,

  "author": "don.bidon",
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.3",

  "applications": {
    "gecko": {
      "id": "{35b17a38-43bb-4c19-9cd7-1249beae3987}",
      "strict_min_version": "57.0a1"
    }
  },

  "permissions": [
    "tabs",
    "notifications",
    "downloads",
    "storage",
    "https://toloka.yandex.ru/*"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "common/FakeFS.js",
      "common/Toloka.js",
      "backend/core.js",
      "backend/updates.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://toloka.yandex.ru/*"
      ],
      "js": [
        "common/FakeFS.js",
        "frontend/add-ons/watchdog.js"
      ]
    }
  ],

  "icons": {
    "40": "frontend/images/icon-toloka.png"
  },

  "browser_action": {
    "default_icon": {
      "40": "frontend/images/icon-toloka.png"
    },
    "default_title": "__MSG_extensionButton__",
    "default_popup": "frontend/popup/popup.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "browser_style": true,
    "page": "frontend/options/options.html"
  }
}
