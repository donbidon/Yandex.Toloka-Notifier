{
  "manifest_version": 2,

  "author": "don.bidon",
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.2",

  "applications": {
    "gecko": {
      "id": "{35b17a38-43bb-4c19-9cd7-1249beae3987}",
      "strict_min_version": "57.0a1"
    }
  },

  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "activeTab",
    "notifications",
    "unlimitedStorage",
    "https://toloka.yandex.ru/*"
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com/ https://unpkg.com/ https://maxcdn.bootstrapcdn.com/; object-src 'self'",

  "background": {
    "persistent": true,
    "scripts": [
      "src/FakeFS.js",
      "src/sound.js",
      "src/core.js",
      "src/updates.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://toloka.yandex.ru/*"
      ],
      "js": [
        "src/FakeFS.js",
        "frontend/add-ons/watchdog.js"
      ]
    }
  ],

  "icons": {
    "32": "frontend/icons/toloka.png"
  },

  "browser_action": {
    "default_icon": {
      "32": "frontend/icons/toloka.png"
    },
    "default_title": "__MSG_extensionButton__",
    "default_popup": "frontend/popup/popup.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "browser_style": true,
    "page": "frontend/options/options.html"
  }
}
